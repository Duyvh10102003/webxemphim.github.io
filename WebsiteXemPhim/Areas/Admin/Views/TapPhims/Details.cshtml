@model WebsiteXemPhim.Models.TapPhim

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Tập Phim</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tap)
        </dd>
        <dt class = "col-sm-2">
            Link 1
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class="col-sm-2">
            Thời lượng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThoiLuong)
        </dd>
        <dt class = "col-sm-2">
            Phim Bộ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhimBo.PhimBoId)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.TapPhimId">Sửa</a> |
    <a class="btn btn-info" asp-action="Index" asp-route-id="@ViewBag.Id">Trở về danh sách</a>
</div>
