@model WebsiteXemPhim.Models.PhimLe

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="page-title">Chi tiết Phim Lẻ</h1>

<div class="details-container">
    <h4 class="section-title">Phim Lẻ</h4>
    <hr class="divider" />
    <dl class="row">
        <dt class="col-sm-2 label">Tên Phim:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.TenPhim)</dd>

        <dt class="col-sm-2 label">Nội dung:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.NoiDung)</dd>

        <dt class="col-sm-2 label">Ảnh phim:</dt>
        <dd class="col-sm-10 value">
            <img class="movie-image" src="@Html.DisplayFor(model => model.Anh)" alt="Phim ảnh không có" />
        </dd>

        <dt class="col-sm-2 label">Ảnh nền phim:</dt>
        <dd class="col-sm-10 value">
            <img class="movie-background-image" src="@Html.DisplayFor(model => model.AnhNen)" alt="Phim ảnh nền không có" />
        </dd>

        <dt class="col-sm-2 label">Thời lượng:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.ThoiLuong)</dd>

        <dt class="col-sm-2 label">Lượt xem:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.LuotXem)</dd>

        <dt class="col-sm-2 label">Link:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.Link)</dd>

        <dt class="col-sm-2 label">Link phim giới thiệu:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.Trailer)</dd>

        <dt class="col-sm-2 label">Like:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.Like)</dd>

        <dt class="col-sm-2 label">Thể Loại:</dt>
        <dd class="col-sm-10 value">
            @foreach (var theLoai in Model.ChiTietTheLoaiPhimLes)
            {
                @theLoai.TheLoai.TenTheLoai
                @if (!theLoai.Equals(Model.ChiTietTheLoaiPhimLes.Last()))
                {
                    <text>, </text>
                }
            }
        </dd>

        <dt class="col-sm-2 label">Năm:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.Nam.TenNam)</dd>

        <dt class="col-sm-2 label">Quốc gia:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.QuocGia.TenQuocGia)</dd>

        <dt class="col-sm-2 label">Trạng Thái:</dt>
        <dd class="col-sm-10 value">@Html.DisplayFor(model => model.TrangThai.TrangThaiPhim)</dd>
    </dl>
</div>

<div class="action-buttons">
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.PhimLeId">Sửa</a> 
    <a class="btn btn-info" asp-action="Index">Trở về danh sách phim</a>
</div>
