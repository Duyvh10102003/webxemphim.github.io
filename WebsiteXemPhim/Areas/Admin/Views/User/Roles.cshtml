@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Role Management</h2>
    <a asp-action="CreateRole" asp-controller="User" class="btn btn-success">Add New Role</a>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="EditRole" asp-route-roleName="@role" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteRole" asp-route-roleName="@role" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
