@model WebsiteXemPhim.Models.PhimBo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="page-title">Xoá Bộ Phim</h1>

<h3>Bạn có chắc chắn muốn xoá bộ phim này?</h3>
<div class="details-container">
    <h4 class="section-title">Bộ Phim</h4>
    <hr class="divider" />
    <dl class="row">
        <dt class="col-sm-2 label">
            Tên phim
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.TenPhim)
        </dd>

        <dt class="col-sm-2 label">
            Nội dung
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt class="col-sm-2 label">
            Ảnh phim
        </dt>
        <dd class="col-sm-10 value">
            <img class="movie-image2" src="@Html.DisplayFor(model => model.Anh)" alt="Phim ảnh không có" />
        </dd>

        <dt class="col-sm-2 label">
            Ảnh nền phim
        </dt>
        <dd class="col-sm-10 value">
            <img class="movie-background-image2" src="@Html.DisplayFor(model => model.AnhNen)" alt="Phim ảnh nền không có" />
        </dd>
        <dt class="col-sm-2 label">
            Link phim giới thiệu
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.Trailer)
        </dd>
        <dt class="col-sm-2 label">
            Lượt xem
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.LuotXem)
        </dd>

        <dt class="col-sm-2 label">
            Like
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.Like)
        </dd>

        <dt class="col-sm-2 label">
            Thể loại
        </dt>
        <dd class="col-sm-10 value">
            @foreach (var theLoai in Model.ChiTietTheLoaiPhimBos)
            {
                @theLoai.TheLoai.TenTheLoai
                @if (!theLoai.Equals(Model.ChiTietTheLoaiPhimBos.Last()))
                {
                    <text>, </text>
                }
            }
        </dd>

        <dt class="col-sm-2 label">
            Năm
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.Nam.TenNam)
        </dd>

        <dt class="col-sm-2 label">
            Quốc gia
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.QuocGia.TenQuocGia)
        </dd>

        <dt class="col-sm-2 label">
            Trạng Thái
        </dt>
        <dd class="col-sm-10 value">
            @Html.DisplayFor(model => model.TrangThai.TrangThaiPhim)
        </dd>
    </dl>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="PhimBoId" />
        <input type="button" value="Xoá" class="btn btn-danger" onclick="confirmDelete()" /> 
        <a class="btn btn-info" asp-action="Index">Trở về danh sách</a>
    </form>
</div>

<script>
    function confirmDelete() {
        if (confirm("Khi xoá sẽ xoá lun các tập phim trong bộ phim.Bạn có chắc chắn muốn xoá ? ")) {
            document.getElementById("deleteForm").submit();
        }
    }
</script>