@page
@model ForgotPasswordConfirmation
@using WebsiteXemPhim.DataAccess
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = "Xác nhận quên mật khẩu";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    /* Căn giữa nội dung trang */
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f0f2f5; /* Màu nền nhẹ nhàng */
        margin: 0;
    }

    /* Khung nội dung chính */
    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        text-align: center;
    }

    /* Tiêu đề */
    h1 {
        font-size: 24px;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 15px;
    }

    /* Đoạn văn bản thông báo */
    p {
        font-size: 16px;
        color: #6c757d;
        margin-bottom: 0;
    }

</style>
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <p>Hãy kiểm tra hòm thư email của bạn để thực hiện bước tiếp theo</p>
</div>
