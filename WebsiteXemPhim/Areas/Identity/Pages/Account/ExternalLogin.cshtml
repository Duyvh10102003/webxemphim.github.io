@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Đăng ký";
}
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<link href="~/admin/css/Identity2.css" rel="stylesheet" />
<div class="registration-container">
    <div class="registration-header">
        <h1>@ViewData["Title"]</h1>
        <h2 id="external-login-title">Liên kết tài khoản @Model.ProviderDisplayName của bạn.</h2>
        <hr />
    </div>

    <p id="external-login-description" class="text-info">
        Bạn đã xác thực thành công với <strong>@Model.ProviderDisplayName</strong>.
        Vui lòng nhập địa chỉ email cho trang web này bên dưới và nhấn nút Đăng ký để hoàn tất
        đăng nhập.
    </p>

    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Vui lòng nhập email của bạn." />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Đăng ký</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
