@page
@model ChangePasswordModel
@using WebsiteXemPhim.DataAccess
@inject ApplicationDbContext _context

@{
    ViewData["TheLoai"] = _context.TheLoai.ToList();
    ViewData["Nam"] = _context.Nam.ToList();
    ViewData["QuocGia"] = _context.QuocGia.ToList();
    Layout = "~/Views/Shared/_Layout.cshtml"; // Sử dụng bố cục tùy chỉnh (nếu cần)
}
<section class="update-password-container">
    <!-- Ảnh động bên trái -->
    <div class="animation-container">
        <img src="/frontend/img/gif/toothless-dance.gif" alt="Animation Left" class="animated-image">
    </div>

    <!-- Form đổi mật khẩu -->
    <div class="update-password-form">
        <h3>Cập nhật mật khẩu</h3>
        <form id="change-password-form" method="post">
            <div class="input-group">
                <input asp-for="Input.OldPassword" placeholder="Nhập mật khẩu hiện tại">
                <span class="icon_lock"></span>
            </div>
            <div class="input-group">
                <input asp-for="Input.NewPassword" placeholder="Nhập mật khẩu mới">
                <span class="icon_lock"></span>
            </div>
            <div class="input-group">
                <input asp-for="Input.ConfirmPassword" placeholder="Xác nhận mật khẩu mới">
                <span class="icon_lock"></span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn-primary">Cập nhật</button>
                <a href="/" class="btn-secondary">Quay lại trang chủ</a>
            </div>
        </form>
    </div>

    <!-- Ảnh động bên phải -->
    <div class="animation-container">
        <img src="/frontend/img/gif/toothless-dance.gif" alt="Animation Right" class="animated-image">
    </div>
</section>






@section Scripts {
    <link rel="stylesheet" href="~/frontend/css/changePassword.css" type="text/css">
    <script src="~/js/login.js"></script>
}
